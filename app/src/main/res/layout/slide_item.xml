<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="300dp">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView2" android:scaleType="centerCrop"/>
    <TextView
            android:text="Slide Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginBottom="109dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp" android:textSize="30sp"
            android:textColor="#fff" android:textAllCaps="false" android:typeface="sans"
            android:lineSpacingExtra="8sp" android:textStyle="bold" android:textAlignment="textStart"
            android:paddingStart="15dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" app:srcCompat="@drawable/gradient_bg" android:id="@+id/imageView3"
            android:layout_marginBottom="0dp" android:layout_alignBottom="@id/imageView2"/>


</RelativeLayout>